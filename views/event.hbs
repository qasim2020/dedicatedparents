<!--[if IE 8]> <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
    <head>
        <title>{{event.current.title}}</title>
        {{> header img=(cloudinaryTransformation event.current.bannerImg 630 1200)}}
    </head>
    <body>

        {{> headerNav active='events'}}

		<div class="container">
			
			<div class="page-header">
				<div class="row">
					<div class="col-md-6 col-sm-6">
                        <h2 class="page-title">{{event.current.title}}</h2>
					</div> <!-- /.col-md-6 -->
					<div class="col-md-6 col-sm-6 hidden-xs back-home">
						<a href="/">&larr; Go back Home</a>
					</div> <!-- /.col-md-6 -->
				</div> <!-- /.row -->
			</div> <!-- /.page-header -->

			<div class="row">
				
				<div class="col-md-8">
					<div class="event-single">
						<div class="event-image">
                            <img src="{{cloudinaryTransformation  event.current.bannerImg 826 1155}}" alt="">
							<div class="img-date">
                                <span class="month">{{getMonth event.current.date}}</span>
                                <span class="day">{{getDay event.current.date}}</span>
                                <span class="year">{{getYear event.current.date}}</span>
							</div> <!-- /.img-date -->
						</div> <!-- /.event-image -->
						<div class="event-content">
                            <h3>{{event.current.title}}</h3>
                            <div>{{{event.current.detail}}}</div>
							<div class="space-s"></div>
							<div class="row">
								{{!-- <div class="col-md-6 col-sm-6">
									<div class="event-map" style="height: 260px;"></div> <!-- /.event-map -->
								</div> <!-- /.col-md-6 --> --}}
								<div class="col-md-12 col-sm-6">
									<ul class="event-info">
                                        <li><span>Date:</span>{{event.current.date}}</li>
                                        <li><span>Time:</span>{{event.current.time}}</li>
                                        <li><span>Event Type:</span>{{event.current.type}}</li>
                                        <li><span>Location:</span>{{event.current.location}}</li>
                                        <li><span>Contact:</span> {{event.current.phone}} </li>
                                        <li>
                                            <span>Email:</span>
                                            <a href="mailto:{{event.current.email}}">{{event.current.email}}</a>
                                        </li>
									</ul>
								</div> <!-- /.col-md-6 -->
							</div> <!-- /.row -->
						</div> <!-- /.event-content -->
					</div> <!-- /.event-single -->
					<div class="row">
						<div class="col-md-12">
							<a href="/event/{{event.prev.slug}}" class="go-prev"><i class="fa fa-long-arrow-left"></i>Prev</a>
							<a href="/event/{{event.next.slug}}" class="go-next">Next <i class="fa fa-long-arrow-right"></i></a>
						</div> <!-- /.col-md-12 -->
					</div> <!-- /.row -->
				</div> <!-- /.col-md-8 -->

				<div class="col-md-4">
                                    {{> galleryPhotos}}
                                    {{> upcomingEvents}}
				</div> <!-- /.col-md-4 -->

			</div> <!-- /.row -->

		</div> <!-- /.container -->

        {{> footer}}

		<!-- Google Map -->
        <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        <script src="/dedicated_parents/js/vendor/jquery.gmap3.min.js"></script>
        
        <!-- Google Map Init-->
        <script type="text/javascript">
            jQuery(function($){
                $('.event-map').gmap3({
                    marker:{
                        address: '16.8496189,96.1288854' 
                    },
                        map:{
                        options:{
                        zoom: 15,
                        scrollwheel: false,
                        streetViewControl : true
                        }
                    }
                });
            });
        </script>

    </body>
</html>
