<!--[if IE 8]> <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
    <head>
        <title>{{staff.current.title}} / {{staff.current.role}}</title>
        {{> header img=(concat "https://res.cloudinary.com/miscellaneous/image/upload/c_lpad,h_630,w_1200/v1680079430/dedicatedparents/team-photos/" staff.current.image)}}
    </head>
    <body>
        {{> headerNav active='staffs'}}
		<div class="container">
			<div class="page-header">
				<div class="row">
					<div class="col-md-6 col-sm-6">
						<h2 class="page-title">{{staff.current.title}}</h2>
					</div> <!-- /.col-md-6 -->
					<div class="col-md-6 col-sm-6 hidden-xs back-home">
						<a href="/">&larr; Go back Home</a>
					</div> <!-- /.col-md-6 -->
				</div> <!-- /.row -->
			</div> <!-- /.page-header -->

			<div class="row">
				<div class="col-md-8">
					<div class="member-single">
						<div class="member-image">
							<img src="https://res.cloudinary.com/miscellaneous/image/upload/c_lpad,h_365,w_770/v1680079430/dedicatedparents/team-photos/{{staff.current.image}}" alt="">
						</div> <!-- /.member-image -->
						<div class="member-content">
							<div class="member-header">
								<div class="pull-left">
									<h3><a href="staff-detail.html">{{toUpperCase staff.current.title}}</a></h3>
									<span class="role">{{staff.current.role}}</span>
								</div>
								<ul class="social pull-right">
									{{#if staff.current.twitter}}
										<li><a href="{{staff.current.twitter}}" class="fa fa-twitter"></a></li>
									{{/if}}
									{{#if staff.current.facebook}}
										<li><a href="{{staff.current.facebook}}" class="fa fa-facebook"></a></li>
									{{/if}}
									{{#if staff.current.googleplus}}
										<li><a href="{{staff.current.googleplus}}" class="fa fa-google-plus"></a></li>
									{{/if}}
									{{#if staff.current.linkedin}}
										<li><a href="{{staff.current.linkedin}}" class="fa fa-linkedin"></a></li>
									{{/if}}
								</ul>
								<div class="clearfix"></div>
							</div>
							<p>{{staff.current.detail}}</p>
						</div>
					</div> <!-- /.member-single -->
					<div class="row">
						<div class="col-md-12">
							<a href="/team-member/{{staff.prev.slug}}" class="go-prev"><i class="fa fa-long-arrow-left"></i>Prev</a>
							<a href="/team-member/{{staff.next.slug}}" class="go-next">Next <i class="fa fa-long-arrow-right"></i></a>
						</div> <!-- /.col-md-12 -->
					</div> <!-- /.row -->
				</div> <!-- /.col-md-8 -->
				<div class="col-md-4">
					{{> galleryPhotos}}
					{{> upcomingEvents}}
				</div> <!-- /.col-md-4 -->
			</div> <!-- /.row -->
		</div> <!-- /.container -->
		{{> footer}}
    </body>
</html>
